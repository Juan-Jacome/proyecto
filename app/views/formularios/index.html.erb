<p id="notice"><%= notice %></p>

<h1>Formularios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre drinker</th>
      <th>Estatura cm</th>
      <th>Peso kg</th>
      <th>Genero</th>
      <th>Horas estadia</th>
      <th>Perfil</th>
      <th>Presupuesto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formularios.each do |formulario| %>
      <% if formulario.userlog == current_userlog %>
      <tr>
        <td><%= formulario.nombre_drinker %></td>
        <td><%= formulario.estatura_cm %></td>
        <td><%= formulario.peso_kg %></td>
        <td><%= formulario.genero %></td>
        <td><%= formulario.horas_estadia %></td>
        <td><%= formulario.perfil %></td>
        <td><%= formulario.presupuesto %></td>
        <td><%= link_to 'Show', formulario %></td>
        <td><%= link_to 'Edit', edit_formulario_path(formulario) %></td>
        <td><%= link_to 'Destroy', formulario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


