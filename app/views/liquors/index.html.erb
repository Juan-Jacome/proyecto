<p id="notice"><%= notice %></p>

<h1>Liquors</h1>

<table>
  <thead>
    <tr>
      <th>Nombre licor</th>
      <th>Marca</th>
      <th>Grados alcohol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @liquors.each do |liquor| %>
      <tr>
        <td><%= liquor.nombre_licor %></td>
        <td><%= liquor.marca %></td>
        <td><%= liquor.grados_alcohol %></td>
        <td><%= link_to 'Show', liquor %></td>
        <td><%= link_to 'Edit', edit_liquor_path(liquor) %></td>
        <td><%= link_to 'Destroy', liquor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

